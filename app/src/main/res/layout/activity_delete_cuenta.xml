<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearlaLayout_delete_cuenta"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@android:color/white"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/txt_delete_cuenta"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_texto_cuenta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#335580"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/linearlaLayout_delete_cuenta"
        android:layout_marginTop="2dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/txt_cuenta_registra"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"


            />

    </LinearLayout>


    <ListView
        android:id="@+id/listViewCuentasElimi"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="@+id/layout_texto_cuenta"


        ></ListView>









</android.support.constraint.ConstraintLayout>