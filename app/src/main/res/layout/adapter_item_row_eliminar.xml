<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="3"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_nombreServicio"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:text="TextView"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_codigoServicio"
            android:layout_width="match_parent"
            android:layout_height="20dp"

            android:layout_alignTop="@+id/txt_nombreServicio"
            android:layout_marginStart="13dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/txt_ref"

            android:text="TextView" />

        <TextView
            android:id="@+id/txt_ref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/txt_codigoServicio"
            android:paddingLeft="15dp"
            android:text="@string/txt_nuSer" />

        <TextView
            android:id="@+id/txt_nombre_entidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_codigoServicio"
            android:layout_marginStart="14dp"
            android:paddingLeft="1dp"

            />


    </RelativeLayout>



    <ImageView
        android:id="@+id/imaViewEliminar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:adjustViewBounds="false"


        android:clickable="false"
        android:cropToPadding="false"
        android:src="@mipmap/reciclaje"


        />






</LinearLayout>